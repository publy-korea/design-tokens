{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2017",
      "dom"
    ],
    "esModuleInterop": true,
    "outDir": "dist",
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    ".eslintrc.json",
    "lib/**/*.ts",
    "tailwind/plugins/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tailwind/**/*",
    "tailwind.config.js"
  ]
}