{
  "name": "design-tokens",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "18.16.x",
    "npm": "9.5.x"
  },
  "scripts": {
    "transform:mobile": "token-transformer tokens.json tokens/mobile.json Mobile",
    "transform:pc": "token-transformer tokens.json tokens/pc.json PC",
    "transform": "npm run transform:mobile && npm run transform:pc",
    "style-dictionary:mobile": "style-dictionary build --config ./style-dictionary.config.mobile.js",
    "style-dictionary:pc": "style-dictionary build --config ./style-dictionary.config.pc.js",
    "build:pc": "npm run transform:pc && npm run style-dictionary:pc",
    "build:mobile": "npm run transform:mobile && npm run style-dictionary:mobile",
    "build": "npm run build:pc && npm run build:mobile",
    "test": "tailwindcss -c example/tailwind.config.js -i example/input.css -o example/output.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/publy-korea/design-tokens.git"
