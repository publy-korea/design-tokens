    "eslint-plugin-n": "^16.5.0",
    "eslint-plugin-prettier": "^5.1.1",
    "eslint-plugin-promise": "^6.1.1",
    "lodash.set": "^4.3.2",
    "lodash.setwith": "^4.3.2",
    "polished": "^4.2.2",
    "prettier": "^3.1.1",
    "style-dictionary": "^3.7.2",
